item_loop = True
while item_loop:
    item = input("Enter number of items: ")
    if item.isnumeric():
        int_item = int(item)
        item_loop = False
    else:
        print("Invalid input. Enter digits only.")

cost_loop = True
while cost_loop:
    cost = input("Enter cost per item in cents: ")
    if cost.isnumeric():
        int_cost = int(cost) /100
        cost_loop = False
    else:
        print("Invalid input. Enter digits only.")

member_loop = True
while member_loop:
    member = input("Are you a member (yes/no): ").lower()
    if member == "yes":
        member_loop = False
    elif member == "no":
        member_loop = False
    else:
        print("Invalid Input. Enter yes or no.")

if member == "yes":
    if int_item < 10:
        less_10_cost = int_cost * 0.85
        tot_cost = less_10_cost * int_item
        print("Total cost for {} items is ${:.2f}".format(int_item, tot_cost))

    else:
        more_20_cost = int_cost * 0.75
        tot_cost = more_20_cost * int_item
        print("Total cost for {} items is ${:.2f}".format(int_item, tot_cost))

else:
    if int_item < 10:
        less_10_cost = int_cost
        tot_cost = less_10_cost * int_item
        print("Total cost for {} items is ${:.2f}".format(int_item, tot_cost))

    elif 10 <= int_item <=19:
        _10_19_cost = int_cost * 0.9
        tot_cost = _10_19_cost * int_item
        print("Total cost for {} items is ${:.2f}".format(int_item, tot_cost))
    else:
        more_20_cost = int_cost * 0.8
        tot_cost = more_20_cost * int_item
        print("Total cost for {} items is ${:.2f}".format(int_item, tot_cost))
