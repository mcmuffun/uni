lyrics = input("Enter lyrics:")
firstspace = lyrics.find(" ")
firstword = lyrics[:firstspace]
print("First word: " + firstword)

lastspace = lyrics.rfind(" ")
lastword = lyrics[lastspace:]
print("Last word:" + lastword)

thirdspace = lyrics.find(" ", firstspace + 1)
fourthspace = lyrics.find(" ", thirdspace +1)
thirdword = lyrics[thirdspace:fourthspace]
print("Third word is:" + thirdword)

letter = input("Enter a letter:")
locateletter = lyrics.find(letter)
nextletter = lyrics.find(letter, locateletter + 1)

letterspaceb = lyrics.rfind(" ", 0, nextletter)
letterspacea = lyrics.find(" ", letterspaceb + 1)

findletter = lyrics[letterspaceb + 1:letterspacea]
print("For letter " + letter + ": " + findletter)
