file_path = 'TEXT.txt'

with open(file_path, 'r') as file:
    lines = file.readlines()

line_count = len(lines)
char_count = 0
word_count = 0
vowel_count = 0

for line_number, line in enumerate(lines):
    line = line.strip()
    char_count += len(line)
    word_count += len(line.split())
    vowel_count += sum(1 for char in line if char.lower() in 'aeiou')
    print(f"Line {line_number} has {len(line)} characters, including {sum(1 for char in line if char.lower() in 'aeiou')} vowels, and {len(line.split())} words.")

# Step 2: Calculate summary data
average_chars_per_line = char_count / line_count
average_chars_per_word = char_count / word_count
percentage_vowels = (vowel_count / char_count) * 100

# Step 3: Print summary data
print(f"The file has {line_count} lines, {char_count} characters including {vowel_count} vowels, and {word_count} words.")
print(f"The average characters per line was {average_chars_per_line:.2f}.")
print(f"The average characters per word was {average_chars_per_word:.2f}.")
print(f"The percentage of characters that were vowels was {percentage_vowels:.2f}%.")
